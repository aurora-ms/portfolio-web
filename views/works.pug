#workPage.fullPage.swiper-container.display

    .swiper-wrapper.flex-horiz
        each val, index in works
            section.swiper-slide
                .imageSection
                    img(class="background"+ index src=val.fondo, alt='fondo')
                    picture
                        source(type="image/webp" srcset=val.webp)
                        img(class="img"+ index src=val.img, alt=val.alt, width=val.width, height=val.height)
                        
                .textSectionWorks
                    .works-content
                        h2=val.titulo
                        h4=val.subtitulo
                        hr
                        .button
                            a(href="/"+val.redirect) Ver m√°s
    .swiper-button-next
    .swiper-button-prev
